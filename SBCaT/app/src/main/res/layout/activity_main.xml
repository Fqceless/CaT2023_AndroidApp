<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/contentFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/refresh_list_header"
            android:text="Set Refresh rate"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/darkGray"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/contentFrame"
            android:textSize="@dimen/contact_dimen"
            android:padding="@dimen/more_space_border_dimen"/>

        <View
            android:layout_width="180dp"
            android:layout_height="2dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/refresh_list_header"
            android:background="@color/black"
            android:id="@+id/refresh_list_border"
            android:visibility="gone"/>

        <ListView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/refresh_list"
            android:visibility="gone"
            android:choiceMode="singleChoice"
            android:layout_below="@id/refresh_list_border"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/darkGray">
        </ListView>

    </RelativeLayout>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="340dp"
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@android:color/background_light">
        <include
            layout="@layout/nav_header_main"
            android:layout_width="340dp"
            android:layout_height="@dimen/nav_header_height"
            android:id="@+id/nav_header"/>

        <ListView
        android:id="@+id/nav_list"
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="4dp"
        android:background="@android:color/background_light"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
